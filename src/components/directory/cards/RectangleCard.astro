---
import UiTag from "@components/ui/tags/Tag.astro";
import DirectoryFeaturedTag from "../FeaturedTag.astro";
import { Image } from "astro:assets";
const { myItem, href } = Astro.props;

// Generate random rating between 4.5 and 5.0 for demo
const rating = (4.5 + Math.random() * 0.5).toFixed(1);
const isVerified = myItem.featured || Math.random() > 0.3;
---

<a href={href}
  class="group block h-full rounded-2xl border border-gray-200 bg-white p-6 transition hover:border-emerald-200 hover:shadow-xl dark:border-gray-500 dark:bg-gray-800 dark:hover:border-gray-300">
  { myItem.featured ? <DirectoryFeaturedTag class="ms-6" /> : <></> }
  
  <div class="flex items-start justify-between">
    <div class="flex items-center gap-4">
      { myItem.image ? 
        <Image height={64} width={64} class="h-16 w-16 rounded-xl object-cover shadow-sm"
          src={myItem.image} alt={myItem.title} /> 
        : 
        <div class="flex h-16 w-16 items-center justify-center rounded-xl bg-gradient-to-br from-emerald-400 to-blue-500 text-xl font-bold text-white shadow-lg">
          {myItem.title?.substring(0, 2) || "AA"}
        </div>
      }
      <div>
        <h3 class="m-0 text-lg font-bold text-gray-900 dark:text-gray-50">
          { myItem?.title }
        </h3>
        { myItem.tags?.[0] && 
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            {myItem.tags[0]}
          </p>
        }
      </div>
    </div>
    
    <div class="flex items-center gap-1">
      <svg class="h-5 w-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
      <span class="text-sm font-bold text-gray-900 dark:text-gray-50">{rating}</span>
    </div>
  </div>

  <p class="mt-4 line-clamp-3 text-sm text-gray-600 dark:text-gray-300">
    { myItem.description }
  </p>

  <div class="mt-4 flex flex-wrap items-center gap-2">
    { isVerified && 
      <span class="rounded-lg bg-emerald-50 px-3 py-1 text-xs font-medium text-emerald-700 dark:bg-emerald-900 dark:text-emerald-300">
        موثق ✓
      </span>
    }
    { myItem.tags?.slice(1, 3).map(
      (e: string) => <UiTag tag={e} /> )
    }
  </div>
</a> 
