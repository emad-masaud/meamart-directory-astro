---
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";
import formatString from "../../util/formatString";
import UiTagGrid from "../ui/tags/Grid.vue";
import UiTagSelect from "../ui/tags/Select.vue";
import config from "@util/themeConfig";
import { useTranslations } from "@util/useTranslations";
import { resolveI18nString } from "@util/resolveI18nString";

const { t } = useTranslations(Astro.request);
const searchPlaceholder = await getSearchPlaceholder(t);

async function getSearchPlaceholder(translations: typeof t) {
  const resolvedPlaceholder = resolveI18nString(
    config.directoryData.search?.placeholder ?? "Search",
    translations,
  );

  if (resolvedPlaceholder && resolvedPlaceholder.includes("{0}")) {
    const count = (await getCollection("directory")).length;
    return formatString(
      resolvedPlaceholder,
      count,
    );
  }

  return resolvedPlaceholder ?? "Search";
}
---

<div class="mb-10 not-prose">
  <div class="mt-2 flex rounded-md shadow-sm">
    <div class="relative flex flex-grow items-stretch focus-within:z-10">
      {
        config.directoryUI.search.icon ? (
          <div class="pointer-events-none absolute inset-y-0 start-0 flex items-center ps-3">
            <Icon
              name={config.directoryUI.search.icon}
              class="h-5 w-5 text-gray-400"
              aria-hidden="true"
            />
          </div>
        ) : (
          ""
        )
      }
      <input
        id="search"
        class=`block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6 dark:active:ring-primary-400 dark:bg-gray-700 dark:ring-gray-600 dark:text-gray-200 dark:placeholder:text-gray-400 ${config.directoryUI.search?.icon ? 'ps-10' : ''}`
        placeholder={searchPlaceholder}
      />
      <div class="absolute inset-y-0 end-0 flex py-1.5 pe-1.5">
        <kbd
          class="inline-flex items-center rounded border border-gray-200 px-1 font-sans text-xs text-gray-400 dark:border-gray-500 dark:text-gray-500"
          >âŒ˜K</kbd
        >
      </div>
    </div>
  </div>
  {
    () => {
      const sidebar = config.layout.sidebar;
      if (sidebar) {
        return <></>
      }
      if (config.directoryUI.search.tags.display === "select") {
        return (
          <UiTagSelect client:load>
            <Icon name="tabler:x" />
          </UiTagSelect>
        );
      }
      if (config.directoryUI.search.tags.display === "show-all") {
        return <UiTagGrid client:load />;
      }
    }
  }
</div>

<script>
  import { search } from "../../store.js";
  import { getClientTranslations } from "@util/clientTranslations";

  const searchInput = document.getElementById("search") as HTMLInputElement;
  
  // Update placeholder dynamically based on locale
  function updatePlaceholder() {
    const { t, formatString } = getClientTranslations();
    if (searchInput && searchInput.placeholder.includes("{0}")) {
      // Keep the count from the original placeholder
      const match = searchInput.placeholder.match(/\d+/);
      if (match) {
        searchInput.placeholder = formatString(t.common.searchPlaceholder, match[0]);
      }
    }
  }
  
  updatePlaceholder();

  // Add an event listener to the button
  searchInput?.addEventListener("input", (event: Event) => {
    const target = event.target as HTMLSelectElement;
    search.set(target.value);
  });

  const keyListener = function (e: KeyboardEvent) {
    if (e.key === "k" && (e.ctrlKey || e.metaKey)) {
      e.preventDefault();
      searchInput?.focus();
    }

    if (e.key === "Escape") {
      e.preventDefault();
      searchInput?.blur();
    }
  };

  document.body.addEventListener("keydown", keyListener);
</script>
