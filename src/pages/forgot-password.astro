---
import Thin from "@layouts/Thin.astro";
import ForgotPasswordForm from "@components/auth/ForgotPasswordForm.vue";
---

<Thin title="Reset Password">
  <div class="w-full max-w-md mx-auto py-8">
    <h1 class="text-3xl font-bold text-center mb-2 text-gray-900 dark:text-white">
      Reset Password
    </h1>
    <p class="text-center text-gray-600 dark:text-gray-400 mb-8">
      Enter your email to receive a password reset code
    </p>
    <ForgotPasswordForm client:load />
  </div>
</Thin>
