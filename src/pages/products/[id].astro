---
// Product Page with JSON-LD Schema
import BaseLayout from '../../layouts/BaseLayout.astro';
import { generateProductSchema} from '../../util/productSchema';
import { fetchAllProducts, type DashboardProduct } from '../../lib/fetchProducts';
import formatString from '../../util/formatString';

// Generate static paths for all products
export async function getStaticPaths() {
  const products = await fetchAllProducts();
  
  return products.map((product) => ({
    params: { id: product.id.toString() },
    props: { product }
  }));
}

const { product } = Astro.props as { product: DashboardProduct };

const siteUrl = Astro.site?.toString() || 'https://example.com';

// Generate JSON-LD schema
const productSchema = generateProductSchema(
  {
    title: product.title,
    description: product.description,
    price: product.price,
    currency: product.currency,
    image_url: product.image_url,
    availability: product.availability,
    condition: product.condition,
    link: product.link || `${siteUrl}/products/${product.id}`,
    brand: product.brand,
    gtin: product.gtin,
    mpn: product.mpn
  },
  siteUrl
);

// Generate WhatsApp link
const whatsappMessage = `أريد الاستفسار عن: ${product.title}`;
const whatsappLink = product.whatsapp
  ? `https://wa.me/${product.whatsapp.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(whatsappMessage)}`
  : null;

// Availability translation
const availabilityText = {
  'in_stock': 'متوفر',
  'out_of_stock': 'غير متوفر',
  'preorder': 'طلب مسبق',
  'backorder': 'قيد الطلب'
}[product.availability] || product.availability;

// Condition translation
const conditionText = {
  'new': 'جديد',
  'used': 'مستعمل',
  'refurbished': 'مجدد'
}[product.condition] || product.condition;
---

<BaseLayout
  title={product.title}
  description={product.description || `تفاصيل المنتج: ${product.title}`}
  image={product.image_url}
>
  <!-- JSON-LD Schema -->
  <script type="application/ld+json" set:html={productSchema}></script>

  <main class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Product Image -->
        <div class="product-image">
          {product.image_url ? (
            <img
              src={product.image_url}
              alt={product.title}
              class="w-full h-auto rounded-lg shadow-lg"
              loading="eager"
            />
          ) : (
            <div class="w-full h-96 bg-gray-200 rounded-lg flex items-center justify-center">
              <span class="text-gray-400 text-xl">لا توجد صورة</span>
            </div>
          )}
        </div>

        <!-- Product Details -->
        <div class="product-details">
          <h1 class="text-4xl font-bold mb-4">{product.title}</h1>

          {product.brand && (
            <div class="mb-4">
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700">
                {product.brand}
              </span>
            </div>
          )}

          {product.price && (
            <div class="mb-6">
              <span class="text-3xl font-bold text-green-600">
                {product.price} {product.currency}
              </span>
            </div>
          )}

          <div class="mb-6">
            <div class="flex gap-4 text-sm">
              <span class={`px-3 py-1 rounded-full ${
                product.availability === 'in_stock' 
                  ? 'bg-green-100 text-green-800' 
                  : 'bg-red-100 text-red-800'
              }`}>
                {availabilityText}
              </span>
              <span class="px-3 py-1 rounded-full bg-gray-100 text-gray-800">
                {conditionText}
              </span>
            </div>
          </div>

          {product.description && (
            <div class="mb-6">
              <h2 class="text-xl font-semibold mb-2">الوصف</h2>
              <p class="text-gray-700 leading-relaxed">{product.description}</p>
            </div>
          )}

          {/* Product IDs */}
          <div class="mb-6 text-sm text-gray-600">
            {product.gtin && <div><strong>GTIN:</strong> {product.gtin}</div>}
            {product.mpn && <div><strong>MPN:</strong> {product.mpn}</div>}
          </div>

          {/* Contact Buttons */}
          <div class="flex flex-col gap-4">
            {whatsappLink && (
              <a
                href={whatsappLink}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg text-center transition-colors flex items-center justify-center gap-2"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                تواصل عبر واتساب
              </a>
            )}

            {product.link && product.link !== '#' && (
              <a
                href={product.link}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg text-center transition-colors"
              >
                زيارة الموقع الرسمي
              </a>
            )}

            {product.email && (
              <a
                href={`mailto:${product.email}?subject=${encodeURIComponent(`الاستفسار عن: ${product.title}`)}`}
                class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg text-center transition-colors"
              >
                إرسال بريد إلكتروني
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .product-image img {
    object-fit: cover;
    max-height: 600px;
  }
</style>
